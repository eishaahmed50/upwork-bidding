---
interface Props {
    title: string;
}

const { title } = Astro.props;
const props = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" href="/src/styles/global.css" />
        <title>{title}</title>
    </head>
    <body>
        <div class="h-screen w-screen flex py-4 pl-4">
            <!-- Navbar -->
            <div class="h-[6vh] w-[20%] absolute top-4 right-3 flex flex-row">
                <!-- message -->
                <a href="" class="h-12 w-12 bg-white rounded-xl drop-shadow-md">
                    <svg
                        class="h-8 w-8 m-2"
                        xmlns="http://www.w3.org/2000/svg"
                        width="1em"
                        height="1em"
                        viewBox="0 0 512 512"
                        {...props}
                    >
                        <path
                            fill="#002f53"
                            d="M160 368c26.5 0 48 21.5 48 48v16l72.5-54.4c8.3-6.2 18.4-9.6 28.8-9.6H448c8.8 0 16-7.2 16-16V64c0-8.8-7.2-16-16-16H64c-8.8 0-16 7.2-16 16v288c0 8.8 7.2 16 16 16zm48 124l-.2.2l-5.1 3.8l-17.1 12.8c-4.8 3.6-11.3 4.2-16.8 1.5s-8.8-8.2-8.8-14.3v-80H64c-35.3 0-64-28.7-64-64V64C0 28.7 28.7 0 64 0h384c35.3 0 64 28.7 64 64v288c0 35.3-28.7 64-64 64H309.3z"
                        ></path>
                    </svg>
                </a>
                <!-- notification -->
                <a
                    href=""
                    class="h-12 w-12 bg-white ml-4 rounded-xl drop-shadow-md"
                >
                    <svg
                        class="h-8 w-8 m-2"
                        xmlns="http://www.w3.org/2000/svg"
                        width="1em"
                        height="1em"
                        viewBox="0 0 24 24"
                        {...props}
                    >
                        <path
                            fill="#002f53"
                            d="M21 19v1H3v-1l2-2v-6c0-3.1 2.03-5.83 5-6.71V4a2 2 0 0 1 2-2a2 2 0 0 1 2 2v.29c2.97.88 5 3.61 5 6.71v6zm-7 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2"
                        ></path>
                    </svg>
                </a>
                <!-- icon and name -->
                <div class="flex">
                    <!-- icon -->
                    <div
                        class="bg-white h-10 w-10 ml-4 mt-1 rounded-full drop-shadow-md"
                    >
                        <svg
                            class="h-8 w-8 m-1"
                            xmlns="http://www.w3.org/2000/svg"
                            width="1em"
                            height="1em"
                            viewBox="0 0 24 24"
                            {...props}
                        >
                            <path
                                fill="#ffc107"
                                d="M12 4a4 4 0 0 1 4 4a4 4 0 0 1-4 4a4 4 0 0 1-4-4a4 4 0 0 1 4-4m0 10c4.42 0 8 1.79 8 4v2H4v-2c0-2.21 3.58-4 8-4"
                            ></path>
                        </svg>
                    </div>
                    <!-- name -->
                    <p class="bg-white h-6 ml-4 font-medium text-sm mt-3">
                        Awais Ahmad
                    </p>
                    <!-- drop down -->
                    <select
                    class="h-[3vh] w-[2vw] absolute right-[1.5vw] top-[1vh] rounded-full font-medium text-[#878787] appearance-none cursor-pointer outline-none"
                >
                    <option value="" disabled selected hidden></option>
                    <option value="t">t</option>
                    <option value="B">b</option>
                    <option value="P">p</option>
                </select>
                <span
                    class="absolute right-[2vw] top-[2.5vh] transform -translate-y-1/2 pointer-events-none text-[#878787] text-xl"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="1em"
                        height="1em"
                        viewBox="0 0 48 48"
                    >
                        <path
                            fill="none"
                            stroke="#878787"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="4"
                            d="M36 18L24 30L12 18"
                        ></path>
                    </svg>
                </span>
                
                </div>
            </div>
            <div class="bg-[#002f53] h-full w-[18%] rounded-xl">
                <h1
                    class="mt-[6vh] ml-[2vw] text-[2.3vw] font-semibold text-white"
                >
                    Sky<span class="text-[#FFC107]">Bidder</span>
                </h1>
                <!-- Navigation bar -->
                <div class="h-[45%] w-full mt-12 ml-2">
                    <!-- Dashboard -->
                    <a
                        href="/dashboard"
                        class="flex items-center space-x-5 hover:bg-white group p-2 rounded-md"
                    >
                        <svg
                            class="h-8 w-8 group-hover:fill-white"
                            xmlns="http://www.w3.org/2000/svg"
                            width="1em"
                            height="1em"
                            viewBox="0 0 24 24"
                            {...props}
                        >
                            <path
                                class="fill-white group-hover:fill-[#555555]"
                                d="M5 22h14a2 2 0 0 0 2-2v-9a1 1 0 0 0-.29-.71l-8-8a1 1 0 0 0-1.41 0l-8 8A1 1 0 0 0 3 11v9a2 2 0 0 0 2 2m5-2v-5h4v5zm-5-8.59l7-7l7 7V20h-3v-5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v5H5z"
                            ></path>
                        </svg>
                        <p
                            class="text-white text-[2vw] group-hover:text-[#555555]"
                        >
                            Dashboard
                        </p>
                    </a>

                    <!-- Campaigns -->
                    <a
                        href="/campaigns"
                        class="flex items-center space-x-5 hover:bg-white group p-2 rounded-md"
                    >
                        <svg
                            class="h-8 w-8 group-hover:fill-white"
                            xmlns="http://www.w3.org/2000/svg"
                            width="1em"
                            height="1em"
                            viewBox="0 0 16 16"
                            {...props}
                        >
                            <path
                                class="fill-white group-hover:fill-[#555555]"
                                d="M1.75 13.25V1.5H.5v12a1.24 1.24 0 0 0 1.22 1H15.5v-1.25z"
                            ></path>
                            <path
                                class="fill-white group-hover:fill-[#555555]"
                                d="M3.15 8H4.4v3.9H3.15zm3.26-4h1.26v7.9H6.41zm3.27 2h1.25v5.9H9.68zm3.27-3.5h1.25v9.4h-1.25z"
                            ></path>
                        </svg>
                        <p
                            class="text-white text-[2vw] group-hover:text-[#555555]"
                        >
                            Campaigns
                        </p>
                    </a>
                    <!-- Accounts -->
                    <a
                        href="/accounts"
                        class="flex items-center space-x-5 hover:bg-white group p-2 rounded-md"
                    >
                        <svg
                            class="h-8 w-8 group-hover:fill-white"
                            xmlns="http://www.w3.org/2000/svg"
                            width="1em"
                            height="1em"
                            viewBox="0 0 24 24"
                            {...props}
                        >
                            <path
                                class="fill-white group-hover:fill-[#555555]"
                                d="M5.503 4.627L5.5 6.75v10.504a3.25 3.25 0 0 0 3.25 3.25h8.616a2.25 2.25 0 0 1-2.122 1.5H8.75A4.75 4.75 0 0 1 4 17.254V6.75c0-.98.627-1.815 1.503-2.123M17.75 2A2.25 2.25 0 0 1 20 4.25v13a2.25 2.25 0 0 1-2.25 2.25h-9a2.25 2.25 0 0 1-2.25-2.25v-13A2.25 2.25 0 0 1 8.75 2zm0 1.5h-9a.75.75 0 0 0-.75.75v13c0 .414.336.75.75.75h9a.75.75 0 0 0 .75-.75v-13a.75.75 0 0 0-.75-.75"
                            ></path>
                        </svg>
                        <p
                            class="text-white text-[2vw] group-hover:text-[#555555]"
                        >
                            Accounts
                        </p>
                    </a>
                    <!-- Templates -->
                    <a
                        href="/templates"
                        class="flex items-center space-x-5 hover:bg-white group p-2 rounded-md"
                    >
                        <svg
                            class="h-7 w-7"
                            xmlns="http://www.w3.org/2000/svg"
                            width="1em"
                            height="1em"
                            viewBox="0 0 14 14"
                            {...props}
                        >
                            <g
                                fill="none"
                                class="stroke-white group-hover:stroke-[#555555]"
                            >
                                stroke-linecap="round" stroke-linejoin="round" >
                                <path
                                    d="M7.5.5h-5a1 1 0 0 0-1 1v9l-1 3l4-1h8a1 1 0 0 0 1-1v-5"
                                ></path>
                                <path
                                    d="m8.363 8.137l-3 .54l.5-3.04l4.73-4.71a1 1 0 0 1 1.42 0l1.06 1.06a1 1 0 0 1 0 1.42z"
                                ></path>
                            </g>
                        </svg>
                        <p
                            class="text-white text-[2vw] group-hover:text-[#555555]"
                        >
                            Templates
                        </p>
                    </a>

                    <!-- Logout -->
                    <div
                        class="flex items-center space-x-3 hover:bg-white group p-2 rounded-md"
                    >
                        <svg
                            class="h-10 w-10 group-hover:fill-white"
                            xmlns="http://www.w3.org/2000/svg"
                            width="1em"
                            height="1em"
                            viewBox="0 0 24 24"
                            {...props}
                        >
                            <path
                                class="fill-white group-hover:fill-[#555555]"
                                d="M5 3h6a3 3 0 0 1 3 3v4h-1V6a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-4h1v4a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3V6a3 3 0 0 1 3-3m3 9h11.25L16 8.75l.66-.75l4.5 4.5l-4.5 4.5l-.66-.75L19.25 13H8z"
                            ></path>
                        </svg>
                        <p
                            class="text-white text-[2vw] group-hover:text-[#555555]"
                        >
                            Logout
                        </p>
                    </div>
                </div>
                >
            </div>
            <div class="bg-white h-full w-[82%]">
                <div class="h-[90%] mt-[6%]">
                    <slot />
                </div>
            </div>
        </div>
    </body>
</html>
